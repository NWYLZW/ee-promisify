{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2016",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "ee-promisify": ["./src/index.ts"],
      "ee-promisify/*": ["./src/*"],
      "ee-promisify/lib/*": ["./lib/*"]
    },
    "types": ["node", "mocha", "chai"],
    "lib": [
      "ES2015",
      "es2020.bigint",
      "es2015.symbol"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "lib/**/*",
    "tests/**/*"
  ]
}
